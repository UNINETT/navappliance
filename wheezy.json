{
    "builders": [
        {
            "type": "virtualbox-iso",
            "vm_name": "navappliance",
            "output_directory": "navappliance",

            "guest_os_type": "Debian_64",
            "iso_url": "http://cdimage.debian.org/cdimage/archive/7.8.0/amd64/iso-cd/debian-7.8.0-amd64-netinst.iso",
            "iso_checksum": "e39c36d6adc0fd86c6edb0e03e22919086c883b37ca194d063b8e3e8f6ff6a3a",
            "iso_checksum_type": "sha256",

            "http_directory": "http",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/wheezy-preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "hostname=navappliance <wait>",
                "netcfg/get_domain=example.org <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "5s",

            "disk_size": 10000,
            "guest_os_type": "Debian_64",
            "headless": false,

            "ssh_username": "root",
            "ssh_password": "navrocks",
            "ssh_wait_timeout": "30m",
            "shutdown_command": "shutdown -h -P now",

            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ]

        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
                "scripts/nav.sh",
                "scripts/cleanup-virtualbox.sh",
                "scripts/cleanup.sh",
                "scripts/zerodisk.sh"
            ]
        }
    ]
}
